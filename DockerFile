# Base PHP image
FROM php:8.2-fpm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpq-dev \
    unzip \
    nodejs \
    npm \
    && docker-php-ext-install pdo pdo_pgsql

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory to Laravel project root
WORKDIR /var/www/html

# Copy project files
COPY . .

# Install PHP dependencies
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Install NPM dependencies & build production assets
RUN npm ci
RUN npm run build -- --mode production

# Clear caches
RUN php artisan config:clear \
    && php artisan route:clear \
    && php artisan view:clear \
    && php artisan cache:clear

# Set proper permissions for storage & bootstrap
RUN chown -R www-data:www-data storage bootstrap/cache

# Expose port
EXPOSE 8080

# Use Nginx + PHP-FPM for production (recommended)
# But for Railway free tier, we can use artisan serve:
CMD php artisan migrate --force && php artisan serve --host=0.0.0.0 --port=8080
